<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <!-- <link href='../css/item-list.css' rel='stylesheet' type='text/css'> -->
    <link href='/stylesheets/home.css' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/form-sample.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.0.0.min.js"></script>

    
</head>

<body>
    <%- include("../sidebar_purchaser.ejs") %>

    <main id="main">
        <div id="main-in">
            <div class="box">
                <!-- <div class="item-list"> -->
                <div>
                    <h2><%= title %></h2>
                </div>
                


                <div class="container">
                    <div class="row row-cols-1 g-4">

                        <% if (items != "") { %>
                            <% for (let i in items) { %>
                                <% let obj = items[i] %>
                                <% let updated_at = new Date(obj.updatedAt) %>
                                <div class="col">
                                    <div class="card" style="max-width: 500px;">
                                        <div class="card-header">
                                            <div class="row g-0">
                                                <div class="col-md-8">
                                                    <p>注文日時: <%= updated_at.getFullYear() %>年 <%= updated_at.getMonth() +1 %>月<%= updated_at.getDate() %>日 <%= updated_at.getHours() %>時<%= updated_at.getMinutes() %>分</p>
                                                </div>
                                                <div class="col-md-4 text-end">
                                                    <a href="/purchaser/items_history_detail?id=<%= obj.id %>">注文詳細</a>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        
                                        <div class="card-body">
                                            <div class="row g-0">
                                                <div class="col-md-6">
                                                    <% if (obj.commodity.image_link != null) { %>
                                                        <img src="/uploads/<%= obj.commodity.image_link %>" style="object-fit: contain; width: 100%; height: 100%;">
                                                    <% } else { %>
                                                        <p>削除された商品です。</p>
                                                    <% } %>
                                                </div>
                                                <div class="col-md-6 text-center">
                                                    <p><%= obj.facility_user.user_name %></p>
                                                    <p>￥<% if (obj.commodity.price != null) { %><%= obj.commodity.price %><% } else { %>--<% } %></p>
                                                    <p><%= obj.num_purchased %>個</p>
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                            
                    </div>
                </div>
                <button onclick="history.back()" class="btn btn-secondary my-4" type="button">戻る</button>

            
        </div>
    </main>
    <script type="text/javascript">
        (function ($) {
            $(function () {
                $('.sub-menu').on({
                    'mouseenter': function () {
                        $(this).addClass('is-active');
                    },
                    'mouseleave': function () {
                        $(this).removeClass('is-active');
                    }
                });
            });
        })(jQuery);
    </script>
</body>

</html>