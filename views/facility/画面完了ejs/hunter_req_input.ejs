    <main id="main">
        <div id="main-in">
            <div class="box">
                <h2>狩猟依頼情報入力画面</h2>
                <form id="contant-form" class="form" name="contact-form">
                    <!-- 依頼する内容 -->
                    <fieldset class="form__group">
                        <legend class="form__group-header">
                            <span class="form__group-label">内容<strong class="form__required-label">必須</strong></span>
                        </legend>
                        <div class="form__group-content">
                            <div class="form__name">
                                <div class="form__text-input">
                                    <label class="visually-hidden" for="text">内容</label>
                                    <p class="text-input">
                                        <input id="text" class="text-input__body" type="text"
                                            name="text" placeholder="あの日、村は一夜にして消えた。海の隣で共に暮らした仲間たちも、生まれたばかりの幼子も、皆奪われていしまった。何の因果か残されたわしは、ただ1つの望みを抱いて生きてきた。オストガロア、、、やつを文字どうり骸にかえてくれ。" title="内容を入力してください"
                                            required aria-required="true">
                                        <span class="text-input__validator"></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <!-- 害獣名 -->
                    <fieldset class="form__group">
                        <legend class="form__group-header">
                            <span class="form__group-label">害獣名<strong class="form__required-label">必須</strong></span>
                        </legend>
                        <div class="form__group-content">
                            <div class="form__name">
                                <div class="form__text-input">
                                    <label class="visually-hidden" for="text">害獣名</label>
                                    <p class="text-input">
                                        <input id="text" class="text-input__body" type="text"
                                            name="text" placeholder="鹿、猪など" title="害獣名を入力してください"
                                            required aria-required="true">
                                        <span class="text-input__validator"></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <!-- 納期 -->
                    <div class="form__group">
                        <p class="form__group-header">
                            <label class="form__group-label" for="datetime">納期</label>
                        </p>
                        <div class="form__group-content">
                            <div class="form__text-input">
                                <p class="text-input">
                                    <input id="datetime" class="text-input__body" type="date" name="datetime"
                                        title="翌日から二週間後までで指定してください">
                                    <span class="text-input__validator"></span>
                                </p>
                            </div>
                            <p class="form__notion">※翌日から二週間後まで指定いただけます</p>
                            <p class="form__validation" data-validation="datetime" role="alert" aria-live="assertive">
                            </p>
                        </div>
                    </div>
                    <div class="btn-area" style="padding-top:100px">
                        <!-- <p class="form__validation" data-validation="submit" role="alert" aria-live="assertive"></p> -->
                        <button class="button child1" type="submit">戻る</button>
                        <a href="#info" class="modal-open"><button class="button child2" type="submit">送信する</button></a>
                    </div>
                </form>

                    <!-- モーダル -->
                    <section id="info">
                        <h2>登録内容確認</h2>
                        <form id="contant-form" class="form" name="contact-form" action="/facility/create_hunter_req" method="post">
                            <!-- 依頼する内容 -->
                            <fieldset class="form__group">
                                <legend class="form__group-header">
                                    <span class="form__group-label">内容<strong class="form__required-label">必須</strong></span>
                                </legend>
                                <div class="form__group-content">
                                    <div class="form__name">
                                        <div class="form__text-input">
                                            <label class="visually-hidden" for="text">内容</label>
                                            <p class="text-input">
                                                <input id="text" class="text-input__body" type="text"
                                                    name="text" placeholder="あの日、村は一夜にして消えた。海の隣で共に暮らした仲間たちも、生まれたばかりの幼子も、皆奪われていしまった。何の因果か残されたわしは、ただ1つの望みを抱いて生きてきた。オストガロア、、、やつを文字どうり骸にかえてくれ。" title="内容を入力してください"
                                                    required aria-required="true" readonly>
                                                <span class="text-input__validator"></span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <!-- 害獣名 -->
                            <fieldset class="form__group">
                                <legend class="form__group-header">
                                    <span class="form__group-label">害獣名<strong class="form__required-label">必須</strong></span>
                                </legend>
                                <div class="form__group-content">
                                    <div class="form__name">
                                        <div class="form__text-input">
                                            <label class="visually-hidden" for="text">害獣名</label>
                                            <p class="text-input">
                                                <input id="text" class="text-input__body" type="text"
                                                    name="text" placeholder="鹿、猪など" title="害獣名を入力してください"
                                                    required aria-required="true" readonly>
                                                <span class="text-input__validator"></span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <!-- 納期 -->
                            <div class="form__group">
                                <p class="form__group-header">
                                    <label class="form__group-label" for="datetime">納期</label>
                                </p>
                                <div class="form__group-content">
                                    <div class="form__text-input">
                                        <p class="text-input">
                                            <input id="datetime" class="text-input__body" type="date" name="datetime"
                                                title="翌日から二週間後までで指定してください" readonly>
                                            <span class="text-input__validator"></span>
                                        </p>
                                    </div>
                                    <p class="form__notion">※翌日から二週間後まで指定いただけます</p>
                                    <p class="form__validation" data-validation="datetime" role="alert" aria-live="assertive">
                                    </p>
                                </div>
                            </div>
                            <div class="btn-area" style="padding-top:100px">
                                <!-- <p class="form__validation" data-validation="submit" role="alert" aria-live="assertive"></p> -->
                                <button class="button child1" type="submit">戻る</button>
                                <input  class="button child2" type="submit" value="決定">
                            </div>
                        </form>
                    </section>
            </div>
            <footer class="footer">
