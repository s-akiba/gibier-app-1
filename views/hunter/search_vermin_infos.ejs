        <div id="main-in">
            <div class="box">
                <h2>害獣位置情報検索２</h2>
                <!-- <form id="contant-form" class="form" name="contact-form"> -->
                <fieldset class="form__group">
                    <legend class="form__group-header">
                        <span class="form__group-label">害獣名</span>
                    </legend>
                    <div class="form__group-content">
                        <div class="form__select-box">
                            <div class="select-box">
                                <select name="animal" id="select-animals" class="select-box__body"
                                    name="address-level1">
                                    <option value="0">選択なし</option>
                                    <% for(let i in animals) { %>
                                        <% let obj=animals[i] %>
                                            <option value="<%= obj.id %>">
                                                <%= obj.wild_animal_name %>
                                            </option>
                                            <% } %>
                                </select><br>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="form__group">
                    <p class="form__group-header">
                        <label class="form__group-label" for="region">都道府県<strong
                                class="form__required-label">必須</strong></label>
                    </p>
                    <div class="form__group-content">
                        <div class="form__select-box">
                            <div class="select-box">
                                <select name="region" id="select-regions" class="select-box__body">
                                    <option value="0">選択なし</option>
                                    <% for(let i in regions) { %>
                                        <% let obj=regions[i] %>
                                            <option value="<%= obj.id %>">
                                                <%= obj.region_name %>
                                            </option>
                                            <% } %>
                                </select><br>
                            </div>
                        </div>
                        <p class="form__validation" data-validation="address-level1" role="alert" aria-live="assertive">
                        </p>
                    </div>
                </div>
                <!-- </form> -->
                <!-- bk -->
                <!-- <div id="start-day-div">
